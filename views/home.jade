extends layout.jade

block content
	div
		if story
			article(id= story._id)
				span= moment(story.createdAt).format('MMMM Do YYYY')
				|  | 
				span= author
				h2= story.title
				div !{story.body}
			each post in story.posts
				article(id= post._id)
					span= moment(post.createdAt).format('MMMM Do YYYY')
					|  |
					span= author
					h2= post.title
					div !{post.body}
		
